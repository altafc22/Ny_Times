<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/action_bar_layout"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:onClick="gotoPreviousActivity"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <ScrollView
        android:layout_below="@+id/action_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/xImageViewTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/xTextViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.Details.Title"
                tools:text="@tools:sample/full_names" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal">



                <TextView
                    android:id="@+id/xTextViewBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/darker_gray"
                    tools:text="@tools:sample/full_names" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_date_range_black_24dp"/>

                    <TextView
                        android:id="@+id/xTextViewDate"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        tools:text="@tools:sample/date/ddmmyy" />

                </LinearLayout>



            </RelativeLayout>

            <TextView
                android:id="@+id/xTextViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginBottom="0dp"
                android:lineSpacingExtra="4sp"
                android:textAppearance="@style/TextAppearance.Details.Text"
                tools:text="@tools:sample/lorem/random" />



            <TextView
                android:id="@+id/tv_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_normal"
                android:autoLink="web"
                android:lineSpacingExtra="4sp"
                android:linksClickable="true"
                android:text="@string/read_more"
                android:textAppearance="@style/TextAppearance.Details.Text"
                android:textStyle="bold"
                android:layout_gravity="end"
                tools:text="@tools:sample/lorem" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>